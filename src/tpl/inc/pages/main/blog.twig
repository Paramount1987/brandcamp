{% set items = [
    {
        pic: 'https://via.placeholder.com/555x400',
        tag: 'Особенности',
        title: 'Автомобильной лопаты BRANDCAMP',
        date: '07.07.2019',
        className: ''
    },
    {
        pic: 'https://via.placeholder.com/555x400',
        tag: 'Топор',
        title: 'Функциональные возможности',
        date: '07.07.2019',
        className: ''
    },
    {
        pic: 'https://via.placeholder.com/555x400',
        tag: 'Пила',
        title: 'Функциональные возможности',
        date: '07.07.2019',
        className: 'd-sm-none d-md-block'
    },
    {
